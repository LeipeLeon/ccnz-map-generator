<% div_for map_render do %>
  <% if map_render.complete %>
    <%= image_tag 'map.png' %> <%= link_to 'Download PDF', map_render.pdf_url %> <em class="hovershow"><%= map_render.created_at %></em>
  <% elsif map_render.started %>
    <%= image_tag 'ajax-loader.gif' %> <%= map_render.created_at %> - Render in progress ...
  <% else %>
    <%= image_tag 'ajax-loader.gif' %> <%= map_render.created_at %> - Awaiting render ...
  <% end %>
  <% unless map_render.complete %>
    <script type="text/javascript">
      setTimeout(function() {
        $.getScript('<%= map_render_path(map_render, :format => 'js') %>');
      }, 5000);
    </script>
  <% end %>
<% end %>
