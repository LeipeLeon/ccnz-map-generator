<h1>Listing maps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Size</th>
    <th>Categories</th>
    <th>Download</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @maps.each do |map| %>
  <tr>
    <td><%= map.title %></td>
    <td><%= map.paper_size %></td>
    <td><%= map.categories %></td>
    <td>
      <% if map.map_renders.first && map.map_renders.first.complete %>
        <%= link_to map.map_renders.first.created_at, map.map_renders.first.url %>
      <% else %>
        Currently being generated ...
      <% end %>
    </td>
    <td><%= link_to 'Show', map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Map', new_map_path %>
